{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "outDir": "dist",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "paths": {
            "@api/*": ["api/*"],
            "@components/*": ["components/*"],
            "@hooks/*": ["hooks/*"],
            "@pages/*": ["pages/*"],
            "@providers/*": ["providers/*"],
            "@redux/*": ["redux/*"],
            "@routes/*": ["routes/*"],
            "@styles/*": ["styles/*"],
            "@utils/*": ["utils/*"],
            "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"]
        },
        "types": ["react/next", "react-dom/next"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
